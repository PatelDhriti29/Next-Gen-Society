<!-- Personal + Society information -->
<%- include('partials/header') %>

  <div class="container" style="padding: 40px 0;">

    <div style="text-align: center; margin-bottom: 30px;">
      <a href="/editProfile" class="glass-btn secondary">
        <i class="fas fa-user-edit"></i> Edit Profile
      </a>
    </div>

    <div class="glass-panel" style="padding: 40px;">
      <h1 class="text-center" style="margin-bottom: 40px; color: var(--primary);">My Profile</h1>

      <div class="row">
        <div class="col-md-6" style="margin-bottom: 30px;">
          <h3
            style="color: var(--accent); margin-bottom: 20px; border-bottom: 1px solid var(--glass-border); padding-bottom: 10px;">
            <i class="fas fa-user"></i> Personal Information
          </h3>
          <div style="padding-left: 10px;">
            <div style="margin-bottom: 15px;">
              <label style="color: var(--text-muted); font-size: 0.9rem;">Name</label>
              <div style="font-size: 1.1rem; font-weight: 500;">
                <%= resident.firstName %>
                  <%= resident.lastName %>
              </div>
            </div>
            <div style="margin-bottom: 15px;">
              <label style="color: var(--text-muted); font-size: 0.9rem;">Phone</label>
              <div style="font-size: 1.1rem;">
                <%= resident.phoneNumber %>
              </div>
            </div>
            <div style="margin-bottom: 15px;">
              <label style="color: var(--text-muted); font-size: 0.9rem;">Flat</label>
              <div style="font-size: 1.1rem;">
                <%= resident.flatNumber %>
              </div>
            </div>
            <div style="margin-bottom: 15px;">
              <label style="color: var(--text-muted); font-size: 0.9rem;">Email ID</label>
              <div style="font-size: 1.1rem;">
                <%= resident.username %>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <h3
            style="color: var(--primary); margin-bottom: 20px; border-bottom: 1px solid var(--glass-border); padding-bottom: 10px;">
            <i class="fas fa-building"></i> Society Information
          </h3>
          <div style="padding-left: 10px;">
            <div style="margin-bottom: 15px;">
              <label style="color: var(--text-muted); font-size: 0.9rem;">Society Name</label>
              <div style="font-size: 1.1rem; font-weight: 500;">
                <%= society.societyName %>
              </div>
            </div>
            <div style="margin-bottom: 15px;">
              <label style="color: var(--text-muted); font-size: 0.9rem;">Address</label>
              <div style="font-size: 1.1rem;">
                <%= society.societyAddress.address %>
              </div>
            </div>
            <div style="margin-bottom: 15px;">
              <label style="color: var(--text-muted); font-size: 0.9rem;">City</label>
              <div style="font-size: 1.1rem;">
                <%= society.societyAddress.city %>
              </div>
            </div>
            <div style="margin-bottom: 15px;">
              <label style="color: var(--text-muted); font-size: 0.9rem;">District</label>
              <div style="font-size: 1.1rem;">
                <%= society.societyAddress.district %>
              </div>
            </div>
            <div style="margin-bottom: 15px;">
              <label style="color: var(--text-muted); font-size: 0.9rem;">Postal Code</label>
              <div style="font-size: 1.1rem;">
                <%= society.societyAddress.postalCode %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>